{{ competition.name }} <br />

Standings Overall<br />
<table>
    <thead>
        <tr>
            <td>Team</td>
            <td>User</td>
            <td>Played</td>
            <td>Won</td>
            <td>Drawn</td>
            <td>Lost</td>
            <td>GF</td>
            <td>GA</td>
            <td>GD </td>
            <td>Points</td>
        </tr>
    </thead>
    {% for standing in overallStandings %}
    <tbody>
        <tr>
            <td>{{ standing.competitor.team.name }}</td>
            <td>{% if standing.competitor.user is not null %}{{ standing.competitor.user.username }}{% endif %}</td>
            <td>{{ standing.played }}</td>
            <td>{{ standing.won }}</td>
            <td>{{ standing.drawn }}</td>
            <td>{{ standing.lost }}</td>
            <td>{{ standing.goalsFor }}</td>
            <td>{{ standing.goalsAgainst }}</td>
            <td>{{ standing.goalDifference }}</td>
            <td>{{ standing.points }}</td>
        </tr>
    </tbody>
    {% endfor %}
</table>

