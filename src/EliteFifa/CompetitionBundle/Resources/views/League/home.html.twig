<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Pos</th>
            <th></th>
            <th>Team</th>
            <th>Manager</th>
            <th>P</th>
            <th>W</th>
            <th>D</th>
            <th>L</th>
            <th>GF</th>
            <th>GA</th>
            <th>GD</th>
            <th>PTS</th>
        </tr>
        </thead>
        <tbody>
        {% for standing in standings %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>({{ standing.position }})</td>
                <td><img width="20" height="20" src="{{ asset('crest/' ~ standing.team.slug ~ '.png') }}" /> {{ standing.team.name }} </td>
                <td><a href="{{ path('elite_fifa.show_user', {'username': standing.team.user.username }) }}">{{ standing.team.user.username }}</a></td>
                <td>{{ standing.homePlayed }}</td>
                <td>{{ standing.homeWon }}</td>
                <td>{{ standing.homeDrawn }}</td>
                <td>{{ standing.homeLost }}</td>
                <td>{{ standing.homeGoalsFor }}</td>
                <td>{{ standing.homeGoalsAgainst }}</td>
                <td>{{ standing.homeGoalsFor - standing.homeGoalsAgainst}}</td>
                <td>{{ standing.homePoints }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>