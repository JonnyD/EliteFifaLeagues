<div class="panel panel-default">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Pos</th>
            <th></th>
            <th>Team</th>
            <th>Manager</th>
            <th>P</th>
            <th>W</th>
            <th>D</th>
            <th>L</th>
            <th>GF</th>
            <th>GA</th>
            <th>GD</th>
            <th>PTS</th>
        </tr>
        </thead>
        <tbody>
        {% for standing in standings %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>-</td>
                <td><img width="20" height="20" src="{{ asset('crest/' ~ standing.team_id ~ '.png') }}" /> {{ standing.team_name }} </td>
                <td><a href="{{ path('elite_fifa.show_user', {'username': standing.username }) }}">{{ standing.username }}</a></td>
                <td>{{ standing.played }}</td>
                <td>{{ standing.won }}</td>
                <td>{{ standing.drawn }}</td>
                <td>{{ standing.lost }}</td>
                <td>{{ standing.goalsFor }}</td>
                <td>{{ standing.goalsAgainst }}</td>
                <td>{{ standing.goalDifference }}</td>
                <td>{{ standing.points }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>