{% set homeTeam = match.homeTeam %}
{% set awayTeam = match.awayTeam %}
{% set homeUser = homeTeam.user %}
{% set awayUser = awayTeam.user %}
{% set confirmed = match.confirmed %}
{% set homeScore = match.homeScore %}
{% set awayScore = match.awayScore %}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Match Result</h4>
        </div>
        <div class="modal-body">

            <div class="te">
                <div class="row">
                    <div class="col-md-4 text-right">
                        <div class="text-center">
                            <img width="120" height="120" src="{{ asset('crest/' ~ homeTeam.slug ~ '.png') }}" /> <br />
                            {{ homeTeam.name }}
                        </div>
                    </div>
                    <div class="col-md-4 text-center" style="font-size: 70px">
                        <strong>
                            {% if confirmed is not null %}
                                {{ homeScore }} - {{ awayScore }}
                            {% else %}
                                vs
                            {% endif %}
                        </strong>
                    </div>
                    <div class="col-md-4 text-left">
                        <div class="text-center">
                            <img width="120" height="120" src="{{ asset('crest/' ~ awayTeam.slug ~ '.png') }}" /> <br />
                            {{ awayTeam.name }}
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-primary">View Full Report</button>
        </div>
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->
